local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local TOTAL_ASSETS = 327
local LOAD_TIME = 30

-- Create screen GUI
local gui = Instance.new("ScreenGui")
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1,0,1,0)
bg.BackgroundColor3 = Color3.fromRGB(10,10,10)
bg.BorderSizePixel = 0
bg.Parent = gui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,60)
title.Position = UDim2.new(0,0,0.15,0)
title.BackgroundTransparency = 1
title.Text = "Loading system"
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255,255,255)
title.Parent = bg

-- Smooth loading bar container
local barContainer = Instance.new("Frame")
barContainer.Size = UDim2.new(0.45,0,0,26)
barContainer.Position = UDim2.new(0.5,0,0.33,0)
barContainer.AnchorPoint = Vector2.new(0.5,0.5)
barContainer.BackgroundColor3 = Color3.fromRGB(40,40,40)
barContainer.BorderSizePixel = 0
barContainer.Parent = bg

local barCorner = Instance.new("UICorner")
barCorner.CornerRadius = UDim.new(0,13)
barCorner.Parent = barContainer

-- Fill bar
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0,0,1,0)
barFill.Position = UDim2.new(0,0,0,0)
barFill.BackgroundColor3 = Color3.fromRGB(255,255,255)
barFill.BorderSizePixel = 0
barFill.Parent = barContainer

local fillCorner = Instance.new("UICorner")
fillCorner.CornerRadius = UDim.new(0,13)
fillCorner.Parent = barFill

-- Asset text
local assetText = Instance.new("TextLabel")
assetText.Size = UDim2.new(1,0,0,40)
assetText.Position = UDim2.new(0,0,0.39,0)
assetText.BackgroundTransparency = 1
assetText.Font = Enum.Font.GothamMedium
assetText.TextScaled = true
assetText.TextColor3 = Color3.fromRGB(255,255,255)
assetText.Text = "> Loading asset 0/" .. TOTAL_ASSETS
assetText.Parent = bg

-- Loading simulation
local start = tick()
local loaded = 0

RunService.RenderStepped:Connect(function()
    local progress = math.clamp((tick() - start) / LOAD_TIME, 0, 1)
    loaded = math.floor(progress * TOTAL_ASSETS)

    -- Update bar width
    barFill.Size = UDim2.new(progress,0,1,0)

    -- Update text
    assetText.Text = "> Loading asset " .. loaded .. "/" .. TOTAL_ASSETS
    
    if progress >= 1 then
        -- Fade-out
        local tween = TweenService:Create(bg, TweenInfo.new(0.6), {BackgroundTransparency = 1})
        tween:Play()
        task.wait(0.7)
        gui:Destroy()
    end
end)
ID="b4518e52-2124-4110-a320-74d6dac3cf23"
